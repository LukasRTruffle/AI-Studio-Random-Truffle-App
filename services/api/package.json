{
  "name": "@random-truffle/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/database/data-source.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/database/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^11.0.8",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.8",
    "@nestjs/typeorm": "^10.0.2",
    "@random-truffle/activation": "workspace:*",
    "@random-truffle/agents": "workspace:*",
    "@random-truffle/auth": "workspace:*",
    "@random-truffle/bigquery": "workspace:*",
    "@random-truffle/core": "workspace:*",
    "@random-truffle/google-ads-client": "workspace:*",
    "@random-truffle/mcp-bigquery": "workspace:*",
    "@random-truffle/meta-client": "workspace:*",
    "@random-truffle/tiktok-client": "workspace:*",
    "@random-truffle/types": "workspace:*",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.8",
    "@nestjs/schematics": "^11.0.8",
    "@nestjs/testing": "^11.0.8",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2"
  }
}
